{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",  
    "module": "commonjs",  
    "declaration": true,  
    "outDir": "./dist",  
    "rootDir": "./src", 
    "paths":{
      "@": ["src"],
      "@/*": ["src/*"],
    },
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true ,
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "preview/**/*.ts",
    "preview/**/*.d.ts",
    "preview/**/*.tsx",
    "preview/**/*.vue",
  ],
  "exclude": ["node_modules", "dist"],
}
